<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jznv.gui.MainController">
    <children>
        <AnchorPane fx:id="chart_pane" prefHeight="200.0" prefWidth="200.0" styleClass="bg-light" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="210.0" AnchorPane.topAnchor="10.0" />
        <VBox fx:id="togglePane_type" alignment="TOP_CENTER" prefWidth="200.0" styleClass="toggle-pane" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <HBox alignment="CENTER" maxHeight="30.0" maxWidth="200.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0" styleClass="plot-type-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <ToggleButton fx:id="type_pie" maxHeight="100.0" maxWidth="100.0" mnemonicParsing="false" onAction="#update" prefHeight="100.0" prefWidth="100.0" styleClass="flat-btn" text="Pie" />
            <ToggleButton fx:id="type_bar" maxHeight="100.0" maxWidth="100.0" mnemonicParsing="false" onAction="#update" prefHeight="100.0" prefWidth="100.0" styleClass="flat-btn" text="Bar" />
            <ToggleButton fx:id="type_line" maxHeight="100.0" maxWidth="100.0" mnemonicParsing="false" onAction="#update" prefHeight="100.0" prefWidth="100.0" styleClass="flat-btn" text="Line" />
         </children>
      </HBox>
    </children>
</AnchorPane>
